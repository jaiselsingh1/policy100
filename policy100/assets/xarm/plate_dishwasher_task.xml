<?xml version="1.0" encoding="utf-8"?>
<!--
  Robot: xArm7 with gripper

  1. Plate is HORIZONTAL (no tilt) - easier grasp geometry
  2. Plate sits on an elevated stand - gripper can access rim
  3. Positioned at Y=0 - centered in front of robot for better reachability
  
  COORDINATE SYSTEM:
    - Origin (0,0,0) = Robot base center, ON the table surface
    - +X = forward (toward objects)
    - +Y = left  
    - +Z = up
-->
<mujoco model="xarm7_plate_dishwasher_task">
  <compiler angle="radian" autolimits="true" meshdir=""/>
  
  <option timestep="0.002" gravity="0 0 -9.81" integrator="implicitfast" cone="elliptic">
    <flag contact="enable"/>
  </option>
  
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
    <quality shadowsize="4096"/>
    <map force="0.1" zfar="30"/>
  </visual>
  
  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1="0.15 0.15 0.15" rgb2="0.25 0.25 0.25" width="512" height="512"/>
    <material name="matplane" texture="texplane" texrepeat="6 6" reflectance="0.1"/>
    <texture name="wood" type="2d" builtin="flat" rgb1="0.55 0.45 0.35" rgb2="0.5 0.4 0.3" width="256" height="256"/>
    <material name="wood" texture="wood" reflectance="0.05"/>
    
    <material name="white" rgba="1 1 1 1"/>
    <material name="gray" rgba="0.753 0.753 0.753 1"/>
    <material name="dark_gray" rgba="0.4 0.4 0.4 1"/>
    <material name="black" rgba="0.2 0.2 0.2 1"/>
    
    <!-- ARM MESHES -->
    <mesh name="link_base" file="xarm_description/meshes/xarm7/visual/link_base.stl"/>
    <mesh name="link1" file="xarm_description/meshes/xarm7/visual/link1.stl"/>
    <mesh name="link2" file="xarm_description/meshes/xarm7/visual/link2.stl"/>
    <mesh name="link3" file="xarm_description/meshes/xarm7/visual/link3.stl"/>
    <mesh name="link4" file="xarm_description/meshes/xarm7/visual/link4.stl"/>
    <mesh name="link5" file="xarm_description/meshes/xarm7/visual/link5.stl"/>
    <mesh name="link6" file="xarm_description/meshes/xarm7/visual/link6.stl"/>
    <mesh name="link7" file="xarm_description/meshes/xarm7/visual/link7.stl"/>
    
    <!-- GRIPPER MESHES -->
    <mesh name="gripper_base" file="xarm_gripper/meshes/base_link.stl"/>
    <mesh name="left_finger" file="xarm_gripper/meshes/left_finger.stl"/>
    <mesh name="right_finger" file="xarm_gripper/meshes/right_finger.stl"/>
    <mesh name="left_outer_knuckle" file="xarm_gripper/meshes/left_outer_knuckle.stl"/>
    <mesh name="right_outer_knuckle" file="xarm_gripper/meshes/right_outer_knuckle.stl"/>
    <mesh name="left_inner_knuckle" file="xarm_gripper/meshes/left_inner_knuckle.stl"/>
    <mesh name="right_inner_knuckle" file="xarm_gripper/meshes/right_inner_knuckle.stl"/>
  </asset>
  
  <default>
    <default class="xarm7">
      <geom type="mesh" material="white"/>
      <joint axis="0 0 1" armature="0.1" damping="5"/>
    </default>
    <default class="gripper">
      <geom rgba="0.7 0.7 0.7 1" friction="1.0 0.05 0.01"/>
    </default>
    <default class="finger">
      <geom rgba="0.5 0.5 0.5 1" friction="1.2 0.05 0.01" solimp="0.95 0.99 0.001" solref="0.004 1"/>
    </default>
    <default class="plate">
      <geom rgba="0.92 0.92 0.96 1" friction="0.8 0.02 0.01" 
            solimp="0.95 0.99 0.001" solref="0.002 1" margin="0.001"/>
    </default>
    <default class="rack">
      <geom rgba="0.3 0.3 0.3 1" friction="0.6 0.01 0.01"/>
    </default>
    <default class="table">
      <geom rgba="0.55 0.45 0.35 1"/>
    </default>
  </default>
  
  <worldbody>
    <!-- xArm7 ROBOT -->
    <include file="xarm7.xml"/>
    
    <geom name="floor" type="plane" size="2 2 0.1" pos="0 0 -0.75" material="matplane"/>
    <light pos="0.3 0 1.5" dir="0 0 -1" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"/>
    <light pos="-0.3 0.4 1.0" dir="0.2 -0.2 -0.9" diffuse="0.4 0.4 0.4"/>
    <light pos="0.5 -0.3 1.2" dir="-0.1 0.1 -0.9" diffuse="0.3 0.3 0.3"/>
    
    <!-- TABLE -->
    <body name="table" pos="0.2 0 0">
      <geom name="table_top" type="box" class="table" size="0.50 0.45 0.02" pos="0 0 -0.02" material="wood"/>
      <geom name="leg1" type="box" class="table" size="0.03 0.03 0.355" pos="-0.44 -0.39 -0.395"/>
      <geom name="leg2" type="box" class="table" size="0.03 0.03 0.355" pos="0.44 -0.39 -0.395"/>
      <geom name="leg3" type="box" class="table" size="0.03 0.03 0.355" pos="-0.44 0.39 -0.395"/>
      <geom name="leg4" type="box" class="table" size="0.03 0.03 0.355" pos="0.44 0.39 -0.395"/>
    </body>
    
    <!-- DISHWASHER RACK -->
    <body name="dishwasher_rack" pos="0.50 0.22 0.004">
      <geom name="rack_base" class="rack" type="box" size="0.10 0.08 0.004"/>
      <geom name="slot0" class="rack" type="box" size="0.002 0.065 0.05" pos="-0.065 0 0.054"/>
      <geom name="slot1" class="rack" type="box" size="0.002 0.065 0.05" pos="-0.0325 0 0.054"/>
      <geom name="slot2" class="rack" type="box" size="0.002 0.065 0.05" pos="0 0 0.054"/>
      <geom name="slot3" class="rack" type="box" size="0.002 0.065 0.05" pos="0.0325 0 0.054"/>
      <geom name="slot4" class="rack" type="box" size="0.002 0.065 0.05" pos="0.065 0 0.054"/>
      <geom name="wall_l" class="rack" type="box" size="0.003 0.08 0.055" pos="-0.097 0 0.059"/>
      <geom name="wall_r" class="rack" type="box" size="0.003 0.08 0.055" pos="0.097 0 0.059"/>
      <geom name="wall_f" class="rack" type="box" size="0.10 0.003 0.055" pos="0 -0.077 0.059"/>
      <geom name="wall_b" class="rack" type="box" size="0.10 0.003 0.055" pos="0 0.077 0.059"/>
      <site name="target_slot" pos="0.016 0 0.01" size="0.012 0.05 0.003" rgba="0 1 0 0.4" type="box"/>
    </body>
    
    <!-- ============================================================== -->
    <!-- PLATE STAND - Elevates plate so gripper can access rim         -->
    <!-- ============================================================== -->
    <!--
      Stand design:
      - Small pedestal that only supports center of plate
      - Height = 0.04m (40mm) - enough clearance for gripper fingers
      - Plate sits on top, horizontal (euler="0 0 0")
      
      Plate geometry:
      - Radius = 0.085m
      - Thickness = 0.010m (base) + 0.004m (rim) = 0.014m total
      
      Positioning:
      - Stand top surface at z = 0.04
      - Plate center at z = 0.04 + 0.007 (half thickness) = 0.047
      - Located at x=0.35, y=0 (centered in front of robot)
    -->
    
    <!-- Pedestal stand - small so gripper can reach plate rim -->
    <body name="plate_stand" pos="0.40 0.0 0.0">
      <!-- Central pillar -->
      <geom name="stand_pillar" type="cylinder" size="0.025 0.02" pos="0 0 0.02" rgba="0.4 0.4 0.4 1"/>
      <!-- Flat top surface -->
      <geom name="stand_top" type="cylinder" size="0.03 0.003" pos="0 0 0.043" rgba="0.5 0.5 0.5 1"/>
    </body>
    
    <!-- 
      PLATE - Horizontal on stand
      - euler="0 0 0" means no rotation (flat)
      - Gripper approaches from above, fingers grab rim edge
    -->
    <body name="plate" pos="0.40 0.0 0.057" euler="0 0 0">
      <freejoint name="plate_joint"/>
      
      <!-- Main plate body -->
      <geom name="plate_base" class="plate" type="cylinder" size="0.085 0.010" mass="0.22"/>
      <!-- Raised rim -->
      <geom name="plate_rim" type="cylinder" size="0.085 0.004" pos="0 0 0.010" rgba="0.88 0.88 0.92 1" mass="0.04"/>
      
      <!-- Center site for tracking -->
      <site name="plate_center" pos="0 0 0.012" size="0.006" rgba="1 0 0 0.8"/>
      
      <!-- 
        Edge sites for grasp planning
        These are at the rim edge, 0.08m from center (slightly inside 0.085 radius)
        Z = 0.012 puts them at top surface of rim
      -->
      <site name="plate_top_edge" pos="0 0.08 0.012" size="0.005" rgba="0 1 0 0.8"/>
      <site name="plate_bottom_edge" pos="0 -0.08 0.012" size="0.005" rgba="0 0 1 0.8"/>
      <site name="plate_left_edge" pos="-0.08 0 0.012" size="0.005" rgba="1 1 0 0.8"/>
      <site name="plate_right_edge" pos="0.08 0 0.012" size="0.005" rgba="1 0 1 0.8"/>
    </body>
    
  </worldbody>
  
  <actuator>
    <position name="act_j1" joint="joint1" kp="2000" kv="100"/>
    <position name="act_j2" joint="joint2" kp="2000" kv="100"/>
    <position name="act_j3" joint="joint3" kp="1500" kv="80"/>
    <position name="act_j4" joint="joint4" kp="1500" kv="80"/>
    <position name="act_j5" joint="joint5" kp="1000" kv="50"/>
    <position name="act_j6" joint="joint6" kp="500" kv="30"/>
    <position name="act_j7" joint="joint7" kp="500" kv="30"/>
    <position name="act_gripper" joint="drive_joint" kp="200" kv="10"/>
  </actuator>
  
  <equality>
    <joint joint1="drive_joint" joint2="left_finger_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="left_inner_knuckle_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="right_outer_knuckle_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="right_finger_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="right_inner_knuckle_joint" polycoef="0 1 0 0 0"/>
  </equality>
  
  <sensor>
    <framepos name="plate_pos" objtype="site" objname="plate_center"/>
    <framequat name="plate_quat" objtype="site" objname="plate_center"/>
    <framepos name="target_pos" objtype="site" objname="target_slot"/>
    <framepos name="tcp_pos" objtype="site" objname="tcp_site"/>
    <framequat name="tcp_quat" objtype="site" objname="tcp_site"/>
    <framepos name="ee_pos" objtype="site" objname="ee_site"/>
    <framepos name="plate_top" objtype="site" objname="plate_top_edge"/>
  </sensor>
  
  <keyframe>
    <!-- 
      Home pose: arm ready, plate horizontal on stand
      Plate quat "1 0 0 0" = identity = no rotation
    -->
    <key name="home" qpos="0 0.35 0 1.4 0 1.05 0   0.85 0 0 0 0 0   0.40 0.0 0.057 1 0 0 0"/>
  </keyframe>
</mujoco>