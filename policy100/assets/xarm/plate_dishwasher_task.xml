<?xml version="1.0" encoding="utf-8"?>
<!--
  Robot: xArm7 with gripper (standalone)
  
  COORDINATE SYSTEM:
    - Origin (0,0,0) = Robot base center, ON the table surface
    - +X = forward (toward objects)
    - +Y = left
    - +Z = up
    
  Table surface is at Z=0 (robot mounted on table)
  
  Parameter Space:
    - plate x: [0.35, 0.50] (in front of robot)
    - plate y: [-0.15, 0.15] (left/right)
    - plate yaw: [0, 2Ï€]
    - rack: FIXED at (0.50, 0.25, 0.02)
-->
<mujoco model="xarm7_plate_dishwasher_task">
  <compiler angle="radian" autolimits="true"/>
  
  <option timestep="0.002" gravity="0 0 -9.81" integrator="implicitfast" cone="elliptic">
    <flag contact="enable"/>
  </option>
  
  <default>
    <default class="xarm">
      <joint axis="0 0 1" damping="5" armature="0.1"/>
      <geom type="capsule" rgba="0.95 0.95 0.95 1" friction="0.8 0.02 0.01"/>
    </default>
    <default class="gripper">
      <geom rgba="0.7 0.7 0.7 1" friction="1.0 0.05 0.01"/>
    </default>
    <default class="finger">
      <geom rgba="0.5 0.5 0.5 1" friction="1.2 0.05 0.01" solimp="0.95 0.99 0.001" solref="0.004 1"/>
    </default>
    <default class="plate">
      <geom rgba="0.92 0.92 0.96 1" friction="0.8 0.02 0.01" solimp="0.95 0.99 0.001" solref="0.002 1"/>
    </default>
    <default class="rack">
      <geom rgba="0.3 0.3 0.3 1" friction="0.6 0.01 0.01"/>
    </default>
    <default class="table">
      <geom rgba="0.55 0.45 0.35 1"/>
    </default>
  </default>
  
  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1="0.15 0.15 0.15" rgb2="0.25 0.25 0.25" width="512" height="512"/>
    <material name="matplane" texture="texplane" texrepeat="6 6" reflectance="0.1"/>
    <texture name="wood" type="2d" builtin="flat" rgb1="0.55 0.45 0.35" rgb2="0.5 0.4 0.3" width="256" height="256"/>
    <material name="wood" texture="wood" reflectance="0.05"/>
  </asset>
  
  <worldbody>
    <!-- Ground plane (below table) -->
    <geom name="floor" type="plane" size="2 2 0.1" pos="0 0 -0.75" material="matplane"/>
    <light pos="0.3 0 1.5" dir="0 0 -1" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"/>
    <light pos="-0.3 0.4 1.0" dir="0.2 -0.2 -0.9" diffuse="0.4 0.4 0.4"/>
    
    <!-- ==================== TABLE ==================== -->
    <!-- Table surface is at Z=0, robot sits on it -->
    <!-- Table extends from roughly x=-0.3 to x=0.7, y=-0.4 to y=0.4 -->
    <body name="table" pos="0.2 0 0">
      <!-- Table top: thickness 0.04m, top surface at z=0 means center at z=-0.02 -->
      <geom name="table_top" type="box" class="table" size="0.50 0.45 0.02" pos="0 0 -0.02" material="wood"/>
      <!-- Legs go down from table bottom (z=-0.04) to floor (z=-0.75) -->
      <!-- Leg height = 0.71/2 = 0.355, leg center at z = -0.04 - 0.355 = -0.395 -->
      <geom name="leg1" type="box" class="table" size="0.03 0.03 0.355" pos="-0.44 -0.39 -0.395"/>
      <geom name="leg2" type="box" class="table" size="0.03 0.03 0.355" pos="0.44 -0.39 -0.395"/>
      <geom name="leg3" type="box" class="table" size="0.03 0.03 0.355" pos="-0.44 0.39 -0.395"/>
      <geom name="leg4" type="box" class="table" size="0.03 0.03 0.355" pos="0.44 0.39 -0.395"/>
    </body>
    
    <!-- ==================== DISHWASHER RACK (FIXED) ==================== -->
    <!-- Sitting on table surface (z=0), rack base at z=0.004 (half thickness) -->
    <body name="dishwasher_rack" pos="0.50 0.22 0.004">
      <geom name="rack_base" class="rack" type="box" size="0.10 0.08 0.004"/>
      <!-- Slot dividers rise from base -->
      <geom name="slot0" class="rack" type="box" size="0.002 0.065 0.05" pos="-0.065 0 0.054"/>
      <geom name="slot1" class="rack" type="box" size="0.002 0.065 0.05" pos="-0.0325 0 0.054"/>
      <geom name="slot2" class="rack" type="box" size="0.002 0.065 0.05" pos="0 0 0.054"/>
      <geom name="slot3" class="rack" type="box" size="0.002 0.065 0.05" pos="0.0325 0 0.054"/>
      <geom name="slot4" class="rack" type="box" size="0.002 0.065 0.05" pos="0.065 0 0.054"/>
      <!-- Walls -->
      <geom name="wall_l" class="rack" type="box" size="0.003 0.08 0.055" pos="-0.097 0 0.059"/>
      <geom name="wall_r" class="rack" type="box" size="0.003 0.08 0.055" pos="0.097 0 0.059"/>
      <geom name="wall_f" class="rack" type="box" size="0.10 0.003 0.055" pos="0 -0.077 0.059"/>
      <geom name="wall_b" class="rack" type="box" size="0.10 0.003 0.055" pos="0 0.077 0.059"/>
      <!-- Target marker (center slot, on the base) -->
      <site name="target_slot" pos="0.016 0 0.01" size="0.012 0.05 0.003" rgba="0 1 0 0.4" type="box"/>
    </body>
    
    <!-- ==================== PLATE (PARAMETERIZABLE) ==================== -->
    <!-- Plate rests on table: bottom of plate at z=0 -->
    <!-- Plate half-thickness is 0.010, so center at z=0.010 -->
    <body name="plate" pos="0.40 -0.10 0.010">
      <freejoint name="plate_joint"/>
      <geom name="plate_base" class="plate" type="cylinder" size="0.085 0.010" mass="0.22"/>
      <geom name="plate_rim" type="cylinder" size="0.085 0.004" pos="0 0 0.010" rgba="0.88 0.88 0.92 1" mass="0.04"/>
      <site name="plate_center" pos="0 0 0.007" size="0.006" rgba="1 0 0 0.8"/>
      <site name="plate_edge1" pos="0.075 0 0.007" size="0.005" rgba="0 0 1 0.5"/>
      <site name="plate_edge2" pos="-0.075 0 0.007" size="0.005" rgba="0 0 1 0.5"/>
    </body>
    
    <!-- ==================== xArm7 ROBOT ==================== -->
    <!-- Robot base at origin (0,0,0), sitting on table surface -->
    <body name="link_base" pos="0 0 0">
      <!-- Base cylinder: height 0.07 (2*0.035), bottom at z=0, center at z=0.035 -->
      <geom name="base_geom" type="cylinder" size="0.065 0.035" pos="0 0 0.035" rgba="0.9 0.9 0.9 1"/>
      <geom name="base_top" type="cylinder" size="0.045 0.025" pos="0 0 0.085" rgba="0.85 0.85 0.85 1"/>
      
      <!-- Link1 starts at z=0.267 (from xArm spec) -->
      <body name="link1" pos="0 0 0.267">
        <inertial pos="-0.0002 0.02905 -0.01233" mass="2.382" diaginertia="0.0056905 0.0049566 0.003316654"/>
        <joint name="joint1" class="xarm" range="-6.28 6.28" damping="10"/>
        <geom name="link1_geom" type="cylinder" size="0.055 0.06" pos="0 0 -0.03" rgba="0.9 0.9 0.9 1"/>
        
        <body name="link2" pos="0 0 0" euler="-1.5708 0 0">
          <inertial pos="0.00022 -0.12856 0.01735" mass="1.869" diaginertia="0.0095989 0.00382472 0.007565669"/>
          <joint name="joint2" class="xarm" range="-2.059 2.0944" damping="10"/>
          <geom name="link2_geom" type="capsule" size="0.048" fromto="0 0 0 0 -0.293 0" rgba="0.9 0.9 0.9 1"/>
          
          <body name="link3" pos="0 -0.293 0" euler="1.5708 0 0">
            <inertial pos="0.0466 -0.02463 -0.00768" mass="1.6383" diaginertia="0.00310955 0.00264483 0.0026624"/>
            <joint name="joint3" class="xarm" range="-6.28 6.28" damping="5"/>
            <geom name="link3_geom" type="cylinder" size="0.045 0.035" pos="0.0525 0 0" euler="0 1.5708 0" rgba="0.9 0.9 0.9 1"/>
            
            <body name="link4" pos="0.0525 0 0" euler="1.5708 0 0">
              <inertial pos="0.07047 -0.11575 0.012" mass="1.7269" diaginertia="0.005889 0.00359703 0.00543244"/>
              <joint name="joint4" class="xarm" range="-0.19198 3.927" damping="5"/>
              <geom name="link4_geom" type="capsule" size="0.042" fromto="0 0 0 0.0775 -0.3425 0" rgba="0.9 0.9 0.9 1"/>
              
              <body name="link5" pos="0.0775 -0.3425 0" euler="1.5708 0 0">
                <inertial pos="-0.00032 0.01604 -0.026" mass="1.3203" diaginertia="0.00534665 0.0049779 0.0013624"/>
                <joint name="joint5" class="xarm" range="-6.28 6.28" damping="5"/>
                <geom name="link5_geom" type="cylinder" size="0.038 0.04" rgba="0.9 0.9 0.9 1"/>
                
                <body name="link6" pos="0 0 0" euler="1.5708 0 0">
                  <inertial pos="0.06469 0.03278 0.02141" mass="1.325" diaginertia="0.0014745 0.0019037 0.0023652"/>
                  <joint name="joint6" class="xarm" range="-1.69297 3.14159" damping="2"/>
                  <geom name="link6_geom" type="capsule" size="0.032" fromto="0 0 0 0.076 0.097 0" rgba="0.85 0.85 0.85 1"/>
                  
                  <body name="link7" pos="0.076 0.097 0" euler="-1.5708 0 0">
                    <inertial pos="0 -0.00677 -0.01098" mass="0.17" diaginertia="9.3e-05 5.87e-05 0.000132"/>
                    <joint name="joint7" class="xarm" range="-6.28 6.28" damping="2"/>
                    <geom name="link7_geom" type="cylinder" size="0.032 0.012" pos="0 0 -0.012" rgba="0.7 0.7 0.7 1"/>
                    <site name="ee_site" pos="0 0 0" size="0.008" rgba="1 0 0 0.5"/>
                    
                    <!-- Gripper -->
                    <body name="gripper_base" pos="0 0 0">
                      <geom name="gripper_base_geom" class="gripper" type="box" size="0.028 0.032 0.025" pos="0 0 -0.035"/>
                      <joint name="drive_joint" type="hinge" axis="1 0 0" pos="0 0.035 -0.059" range="0 0.85" damping="0.5"/>
                      
                      <body name="left_outer_knuckle" pos="0 0.035 -0.059">
                        <geom class="gripper" type="box" size="0.008 0.012 0.018" pos="0 0.018 -0.015"/>
                        <body name="left_finger" pos="0 0.035465 -0.042039">
                          <joint name="left_finger_joint" type="hinge" axis="1 0 0" range="0 0.85" damping="0.2"/>
                          <geom class="finger" type="box" size="0.006 0.008 0.025" pos="0 0.008 -0.025"/>
                          <geom class="finger" type="box" size="0.006 0.012 0.008" pos="0 0.012 -0.058"/>
                        </body>
                      </body>
                      
                      <body name="left_inner_knuckle" pos="0 0.02 -0.074">
                        <joint name="left_inner_knuckle_joint" type="hinge" axis="1 0 0" range="0 0.85" damping="0.2"/>
                        <geom class="gripper" type="box" size="0.006 0.006 0.015" pos="0 0.01 -0.015"/>
                      </body>
                      
                      <body name="right_outer_knuckle" pos="0 -0.035 -0.059">
                        <joint name="right_outer_knuckle_joint" type="hinge" axis="-1 0 0" range="0 0.85" damping="0.2"/>
                        <geom class="gripper" type="box" size="0.008 0.012 0.018" pos="0 -0.018 -0.015"/>
                        <body name="right_finger" pos="0 -0.035465 -0.042039">
                          <joint name="right_finger_joint" type="hinge" axis="1 0 0" range="0 0.85" damping="0.2"/>
                          <geom class="finger" type="box" size="0.006 0.008 0.025" pos="0 -0.008 -0.025"/>
                          <geom class="finger" type="box" size="0.006 0.012 0.008" pos="0 -0.012 -0.058"/>
                        </body>
                      </body>
                      
                      <body name="right_inner_knuckle" pos="0 -0.02 -0.074">
                        <joint name="right_inner_knuckle_joint" type="hinge" axis="-1 0 0" range="0 0.85" damping="0.2"/>
                        <geom class="gripper" type="box" size="0.006 0.006 0.015" pos="0 -0.01 -0.015"/>
                      </body>
                      
                      <body name="link_tcp" pos="0 0 -0.172">
                        <site name="tcp_site" pos="0 0 0" size="0.006" rgba="0 1 0 1"/>
                      </body>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <!-- Actuators -->
  <actuator>
    <position name="act_j1" joint="joint1" kp="2000" kv="100"/>
    <position name="act_j2" joint="joint2" kp="2000" kv="100"/>
    <position name="act_j3" joint="joint3" kp="1500" kv="80"/>
    <position name="act_j4" joint="joint4" kp="1500" kv="80"/>
    <position name="act_j5" joint="joint5" kp="1000" kv="50"/>
    <position name="act_j6" joint="joint6" kp="500" kv="30"/>
    <position name="act_j7" joint="joint7" kp="500" kv="30"/>
    <position name="act_gripper" joint="drive_joint" kp="200" kv="10"/>
  </actuator>
  
  <!-- Gripper mimic constraints -->
  <equality>
    <joint joint1="drive_joint" joint2="left_finger_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="left_inner_knuckle_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="right_outer_knuckle_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="right_finger_joint" polycoef="0 1 0 0 0"/>
    <joint joint1="drive_joint" joint2="right_inner_knuckle_joint" polycoef="0 1 0 0 0"/>
  </equality>
  
  <!-- Sensors -->
  <sensor>
    <framepos name="plate_pos" objtype="site" objname="plate_center"/>
    <framequat name="plate_quat" objtype="site" objname="plate_center"/>
    <framepos name="target_pos" objtype="site" objname="target_slot"/>
    <framepos name="tcp_pos" objtype="site" objname="tcp_site"/>
    <framequat name="tcp_quat" objtype="site" objname="tcp_site"/>
  </sensor>
  
  <!-- Keyframes: robot joints (13) + plate freejoint (7) = 20 -->
  <keyframe>
    <key name="home" qpos="0 0 0 1.57 0 1.57 0  0 0 0 0 0 0  0.40 -0.10 0.010 1 0 0 0"/>
  </keyframe>
</mujoco>